<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity?.Name
        <button class="bg-red-500 px-2 py-1 rounded-md hover:bg-red-700 ease-in-out duration-300">
            <a href="MicrosoftIdentity/Account/SignOut">Log out</a>
        </button>
    </Authorized>
    <NotAuthorized>
        <button class="bg-gray-700">
            <a href="MicrosoftIdentity/Account/SignIn">Log in</a>
        </button>
    </NotAuthorized>
</AuthorizeView>
